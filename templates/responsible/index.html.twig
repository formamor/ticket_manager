{% extends 'base.html.twig' %}

{% block title %}Responsible index{% endblock %}

{% block body %}
    <h1>Responsible index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsible in responsibles %}
            <tr>
                <td>{{ responsible.id }}</td>
                <td>{{ responsible.name }}</td>
                <td>{{ responsible.email }}</td>
                <td>
                    <a href="{{ path('app_responsible_show', {'id': responsible.id}) }}">show</a>
                    <a href="{{ path('app_responsible_edit', {'id': responsible.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_responsible_new') }}">Create new</a>
{% endblock %}
